<%= stylesheet_link_tag :categories, :media => "all" %>


<div class="store-grid">
 <div class="image-grid">
      <div class="image-content">        
        <div class="image-img">  <%= image_tag(other_store.logo.url) %> </div>
        <div class="image-text">
          <div class="image-height">
			<ul>	
			  <li> <%= other_store.title %> </li>
			  <li>	
	      <% if other_store.tags.any? then %>          
	          <% other_store.tags.each do |tag| %>
	            <%= tag.title %>
	          <% end %> 
	      <% end %>
			  </li>
			  <li>
	      <% if other_store.phones.any? then %>
	        <%= t("phone", :count => other_store.phones.count ) %>
	        <% other_store.phones.each do |phone| %>
	          <%= phone.number_type + ": " + phone.number %>
	        <% end %> 
	      <% end %>
			  </li>
	
	    <% other_store.locations.each do  |location|%>
	      <li><i class="icon-airplane"></i><%= location.address %></li>
	    <% end %>
		
		
	    <li id="likes_count<%=other_store.id%>"><i class="icon-bar-graph"></i> <%= other_store.points %></li>
		
	<li><%= render 'shared/like_form', :likeable => other_store if user_signed_in? %></li>
		
		
			</ul>
          </div>          
        </div>
      </div>
    </div>
	</div> 





