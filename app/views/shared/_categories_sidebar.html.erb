<!-- Routing for each store Category -->

<% if @categories %>
  <ul class="list-group">
    <% @categories.each do |category| %>
      <a href=<%= "/#{category.class.to_s.underscore.pluralize(2)}/#{category.id}" %>><li class="list-group-item"><%= category.title %></li></a>
    <% end %>
  </ul>
<% end %>